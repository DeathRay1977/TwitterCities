extends layout

block content
  div.container
    h1 Index
    #container.row
      a(href='/users/login', class='text-center new-account') Log in
    #container.row
      a(href='/users/signup', class='text-center new-account') Create an account
    #container.row
      a(href='/users/signout', class='text-center new-account') Sign Out
    #container.row
      form(class='form-signin', action='/search', method='POST')
              input(type='text', name='search_term' class='form-control', placeholder='Search',required, autofocus)
              input(type='text', name='location' class='form-control', placeholder='Location',required, autofocus)
              button(class='btn btn-lg btn-primary btn-block', type='submit') Sign in
