extends layout

block content
  header
    div.container
      div.col-md-4
        a(href='/users/login', class='text-center new-account') Log in
      div.col-md-4
        a(href='/users/signup', class='text-center new-account') Create an account
      div.col-md-4
        a(href='/users/signout', class='text-center new-account') Sign Out
  body
    main
      div.container
        div.row-fluid

          div.container
            form(class='form-signin', action='/search', method='POST')
              input(type='text', name='search_term' class='form-group', placeholder='Search',required, autofocus)
              input(type='text', name='location' class='form-group', placeholder='Location',required)
              input(type='text', name='number' class='form-group', placeholder='Number of tweets',required)
              button(class='btn btn-info', type='submit') Search


          div.container
            div.row
              div.col-md-6
                p
                  img(src="https://maps.googleapis.com/maps/api/staticmap?center=Opera+House,Sydney+Australia&zoom=13&size=500x500&markers=#{markers}&sensor=false")
              div.col-md-6
                script(type='text/javascript').
                  for (var i = 0; i < #{pageData.statuses.length}; i++)
                    { console.log(#{pageData.statuses[i]}) }
