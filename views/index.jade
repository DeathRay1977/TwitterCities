extends layout

block content
  div.container
    h1 Index
    #container.row
      a(href='/users/login', class='text-center new-account') Log in
    #container.row
      a(href='/users/signup', class='text-center new-account') Create an account
    #container.row
      a(href='/users/signout', class='text-center new-account') Sign Out
    #container.row
      form(class='form-signin', action='/search' method='post')
              input(type='text', name='search_term' class='form-control', placeholder='Search', id='search_term', required, autofocus)
              input(type='text', name='location' class='form-control', placeholder='Location', id='location', required)
              input(type='text', name='number' class='form-control', placeholder='Number', id='number', required)
              button(class='btn btn-lg btn-primary btn-block', type='submit' id='Go') Go



